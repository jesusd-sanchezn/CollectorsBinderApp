rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Binder backgrounds - users can upload/read their own backgrounds
    match /binder-backgrounds/{userId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Allow authenticated users to read any uploaded images
    match /{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if false; // Default deny for other paths
    }
  }
}

